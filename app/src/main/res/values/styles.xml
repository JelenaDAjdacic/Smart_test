<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Pager theme. -->
    <style name="PagerTabStripText">
        <item name="android:textSize">@dimen/bold_letters</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <!-- Button theme. -->
    <style name="ButtonText">
        <item name="android:textSize">@dimen/bold_letters</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActionBarText">
        <item name="android:textSize">@dimen/action_bar_letters</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TaksDetailTitle">
        <item name="android:textSize">@dimen/action_bar_letters</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NoTasksMessage">
        <item name="android:textSize">@dimen/action_bar_letters</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>
